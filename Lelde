;; -*- lisp-data -*-
(lelde-project
 :name    "lelde.el"
 :version "0.1.0"
 :emacs   "29.3"
 :index   "lelde"

 :brief  "Live Emacs Lisp Development Environment"

 :copyright "2025 lieutar <lieutar@gmail.com>"
